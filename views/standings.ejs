<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') -%>
    <title>Standings</title>
</head>
<body>
  <%- include('partials/navbar') -%>
  <div class="table-responsive">
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th></th>
        <th>TEAMS</th>
        <th>P</th>
        <th>W</th>
        <th>D</th>
        <th>L</th>
        <th>GF</th>
        <th>GA</th>
        <th>GD</th>
        <th>Pts</th>
      </tr>
    </thead>
    <tbody class="standing-table">
      <% displayData.standings[0].table.forEach(function(content,index){ %>
                 <tr>
                   <td><%= index+1  %></td>
                   <td> <img class="table-icons" src="<%= content.team.crestUrl %>"> <%= content.team.name %></td>
                   <td><%= content.playedGames %></td>
                   <td><%= content.won %></td>
                   <td><%= content.draw %></td>
                   <td><%= content.lost %></td>
                   <td><%= content.goalsFor %></td>
                   <td><%= content.goalsAgainst %></td>
                   <td><%= content.goalDifference %></td>
                   <td><%= content.points %></td>
                 </tr>
      <% }) %>
    </tbody>
    </table>
    <% if(displayData.competition.code!="CL" && displayData.competition.code!="WC"){ %>
    <div class="container-fluid table-classification">
      <h2 class="table-title">Qualification/Relegation</h2>
      <span id="cl-qualify" class="zone"></span><p class="table-zone">Champions League</p><br>
      <span id="uel-qualify" class="zone"></span><p class="table-zone">Europa League</p><br>
      <span id="relegation" class="zone"></span><p class="table-zone">Relegation</p><br>
    </div>
    <% } %>
    </div>
</body>
</html>